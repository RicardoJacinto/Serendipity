<% include ../partials/header %>

<!--Header Section of index.page - Note: Swapping the jumbotron with the container, expands it width to full page. -->
<header>
    <div class ="jumbotron"> 

    <div class="container">
           <h2> Welcome to our Camping page! <i class="fa fa-free-code-camp" aria-hidden="true"></i> </h2>
           <p>View our hand-picked campgrounds from all over the World.</p>
           <a href="/campgrounds/new" class="btn btn-primary btn-large" role="button">Add new Campground</a>
     </div>
  </div>
</header>

<div class = "content-title">
    <div class="container">
<div class ="row text-center" id="content-title"> 
    <div class ="col-lg-12"> <h3>  Our most popular Campgrounds </h3></div>
    </div>
           
</div>
</div>
<div class ="content-index">
<div class="container">
       
       <div class = "row text-center" style="display:flex; flex-wrap:wrap;">
            
             <% campgrounds.forEach(function(camp){ %>
              
             <div class= "col-md-3 col-sm-6 col-xs-12">
              
                 <div class ="thumbnail-toggle">
                     
                 <div class="thumbnail" id="thumbnail-index">
                    
                     
                         
                     <image src="<%=camp.image%>"></image>
                     
                     <div class = "caption">
                      
                         <h4><%= camp.name %><h4>
                            
                          <a href ="/campgrounds/<%=camp._id %>" class="btn btn-primary btn-md btn-block">Description</a>
 
                     </div>
                 </div>
               </div>
            
             </div>
              
             
             
             <% }); %>
             
        </div>
     

       </div>
    </div>

<% include ../partials/footer%>

