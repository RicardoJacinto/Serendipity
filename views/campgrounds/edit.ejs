
<% include ../partials/header %>
<div id="forms">
<div class = "container text-center" id="extra-form-input" >
<h1> Edit <%= campground.name %></h1>


<div class ="form-input" >
      <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
         
          <div class ="form-group">
            <input class ="form-control" type ="text" value ="<%=campground.name %>" name = "camp[name]">
         </div>
         <div class ="form-group">
             <input class ="form-control" type="text" value ="<%=campground.image %>" name ="camp[image]">
         </div>
         
          <div class ="form-group">
            <textarea class="form-control" name="camp[description}"><%=campground.description %></textarea>
         </div>
         <div class ="form-group">
             <input class ="form-control" type="text" value="<%=campground.price %>" placeholder="Set a price/night" name ="camp[price]">
         </div>
      
         <div class ="form-group">
             <button class="btn btn-primary btn-lg btn-block">Edit Camp!!</button>
         </div>
         
      </form>
     <a style="padding-right: 100%;" href="/campgrounds">Back</a>
 </div>
 
 </div>

